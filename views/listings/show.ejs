<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-12 offset-2">
    <h3>Listing Details</h3>

    <div class="card col-8">
      <img
        class="card-img-top show-img"
        src="<%= listing.image %>"
        alt="listing-image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          <%= listing.description %> <br />
          &#8377; <%=listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
      </div>
    </div>

    <br />

    <div class="row show-btns">
      <div class="col-2 ml-1">
        <button class="btn btn-dark">
          <a style="color: white" href="/listings/<%= listing._id %>/edit"
            >Edit</a
          >
        </button>
      </div>

      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark mr-1">Delete this Listing</button>
      </form>
    </div>
  </div>
  <div class="col-8 offset-2 mb-4 mt-4">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          name="review[rating]"
          class="form-range"
          id="rating"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="4"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please write a Comment to Submit a Review
        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>

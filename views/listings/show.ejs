<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-12 offset-2">
    <h3><b><%= listing.title %></b></h3>

    <div class="card col-8 listing-card">
      <img
        class="card-img-top show-img"
        src="<%= listing.image %>"
        alt="listing-image"
      />
      <div class="card-body">
        <p class="card-text">
          <i>@<%= listing.owner.username %></i> <br />
          <%= listing.description %> <br />
          &#8377; <%=listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
      </div>
    </div>

    <br />
    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="row show-btns">
      <div class="col-2 ml-1">
        <button class="btn btn-dark">
          <a style="color: white" href="/listings/<%= listing._id %>/edit"
            >Edit</a
          >
        </button>
      </div>

      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark mr-1">Delete this Listing</button>
      </form>
    </div>
  </div>
  <% } %>

  <div class="col-8 offset-2 mb-4 mt-4">
    <hr />
    <% if (currUser) { %>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing.id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          name="review[rating]"
          class="form-range"
          id="rating"
          min="1"
          max="5"
        />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="4"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Please write a Comment to Submit a Review
        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %>
    <h4>All reviews</h4>
    <div class="row">
      <% for(review of listing.reviews) {%>
      <div class="card col-5 ml-4 mb-3">
        <div class="card-body">
          <h6 class="card-title"><%= review.author.username %></h6>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %>â˜…</p>
        </div>
        <form
          class="mb-3"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete"
          method="post"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>

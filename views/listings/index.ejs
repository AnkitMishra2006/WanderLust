<% layout("/layouts/boilerplate") %>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .tax-active {
      background-color: black;
      color: white;
      opacity: 0.7 !important;
    }

    .tax-active:hover {
      opacity: 1 !important;
    }

    .filter {
      text-align: center;
      font-size: 12px;
      margin-right: 2.5rem;
      opacity: 0.7;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .tax-switch button {

      border: 1px solid rgba(48, 46, 46, 0.862);
      border-radius: 1rem;
      height: 2.25rem;
      padding: 1.5rem;
      margin-bottom: 1rem;
      margin-left: 5rem;
      align-items: center;
      display: flex;
      cursor: pointer;
      opacity: 0.7;
    }

    .tax-switch button:hover {
      opacity: 1;
      /* background-color: rgba(48, 46, 46, 0.862);
      color: white; */
    }

    .tax-info {
      display: none;
    }
  </style>

  <body>

    <div id="filters" class="mt-4 mb-4">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>

      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></i></div>
        <p>Mountain Views</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-tent"></i></div>
        <p>Camping</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Nature</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

      <!-- <div class="filter">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div> -->

      <div class="tax-switch">
        <!-- <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display Total After Taxes</label>
        </div> -->
        <button><b>Display Taxes</b></button>
      </div>
    </div>

    <!-- Search Results Info -->
    <% if(searchQuery && (searchQuery.search || searchQuery.minPrice || searchQuery.maxPrice)) { %>
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="alert alert-info mb-3 d-flex justify-content-between align-items-center">
              <div>
                <i class="fa-solid fa-magnifying-glass"></i>
                <% if(searchQuery.search) { %>
                  Search results for "<strong>
                    <%= searchQuery.search %>
                  </strong>"
                  <% } %>
                    <% if(searchQuery.minPrice || searchQuery.maxPrice) { %>
                      <% if(searchQuery.search) { %> • <% } %>
                          Price: ₹<%= searchQuery.minPrice || 0 %> - ₹<%= searchQuery.maxPrice || '∞' %>
                              <% } %>
                                <br>
                                Found <%= listings.length %> listing<%= listings.length !==1 ? 's' : '' %>
                                    <% if(listings.length===0) { %>
                                      <br><small>Try searching with different keywords or adjusting your price
                                        range.</small>
                                      <% } %>
              </div>
              <a href="/listings" class="btn btn-outline-secondary btn-sm">
                <i class="fa-solid fa-times"></i> Clear Search
              </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
          <% for(let listing of listings) { %>
            <a href="/listings/<%= listing._id %>">
              <div class="card col listing-card" style="width: 17rem">
                <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap" style="height: 19rem" />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b>
                      <%= listing.title %>
                    </b><br />
                    &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                      <i class="tax-info"> &nbsp; +18% GST</i>
                  </p>
                </div>
              </div>
            </a>
            <% } %>
        </div>

        <!-- Pagination Controls -->
        <% if(totalPages> 1) { %>
          <div class="container">
            <div class="row">
              <div class="col-12 d-flex justify-content-center mt-4">
                <nav aria-label="Listings pagination">
                  <ul class="pagination">
                    <!-- Previous Page -->
                    <% let searchParams='' ; if (searchQuery.search) searchParams +='&search=' +
                      encodeURIComponent(searchQuery.search); if (searchQuery.minPrice) searchParams +='&minPrice=' +
                      encodeURIComponent(searchQuery.minPrice); if (searchQuery.maxPrice) searchParams +='&maxPrice=' +
                      encodeURIComponent(searchQuery.maxPrice); %>
                      <% if(hasPrev) { %>
                        <li class="page-item">
                          <a class="page-link" href="?page=<%= currentPage - 1 %><%= searchParams %>">
                            <i class="fa-solid fa-chevron-left"></i> Previous
                          </a>
                        </li>
                        <% } else { %>
                          <li class="page-item disabled">
                            <span class="page-link"><i class="fa-solid fa-chevron-left"></i> Previous</span>
                          </li>
                          <% } %>

                            <!-- Page Numbers -->
                            <% let startPage=Math.max(1, currentPage - 2); let endPage=Math.min(totalPages, currentPage
                              + 2); if (startPage> 1) {
                              %>
                              <li class="page-item">
                                <a class="page-link" href="?page=1<%= searchParams %>">1</a>
                              </li>
                              <% if (startPage> 2) { %>
                                <li class="page-item disabled">
                                  <span class="page-link">...</span>
                                </li>
                                <% } %>
                                  <% } %>

                                    <% for(let i=startPage; i <=endPage; i++) { %>
                                      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %><%= searchParams %>">
                                          <%= i %>
                                        </a>
                                      </li>
                                      <% } %>

                                        <% if (endPage < totalPages) { %>
                                          <% if (endPage < totalPages - 1) { %>
                                            <li class="page-item disabled">
                                              <span class="page-link">...</span>
                                            </li>
                                            <% } %>
                                              <li class="page-item">
                                                <a class="page-link" href="?page=<%= totalPages %><%= searchParams %>">
                                                  <%= totalPages %>
                                                </a>
                                              </li>
                                              <% } %>

                                                <!-- Next Page -->
                                                <% if(hasNext) { %>
                                                  <li class="page-item">
                                                    <a class="page-link"
                                                      href="?page=<%= currentPage + 1 %><%= searchParams %>">
                                                      Next <i class="fa-solid fa-chevron-right"></i>
                                                    </a>
                                                  </li>
                                                  <% } else { %>
                                                    <li class="page-item disabled">
                                                      <span class="page-link">Next <i
                                                          class="fa-solid fa-chevron-right"></i></span>
                                                    </li>
                                                    <% } %>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
          <% } %>
  </body>

  <script>
    window.addEventListener('load', function () {
      const taxButton = document.querySelector(".tax-switch button");

      if (!taxButton) {
        return;
      }

      taxButton.addEventListener("click", function (e) {
        e.preventDefault();

        // Toggle button active state
        taxButton.classList.toggle("tax-active");
        const isActive = taxButton.classList.contains("tax-active");

        // Update button text
        taxButton.innerHTML = isActive ? "<b>Hide Taxes</b>" : "<b>Display Taxes</b>";

        // Toggle tax info visibility
        const taxInfoElements = document.querySelectorAll(".tax-info");

        taxInfoElements.forEach(function (element, index) {
          if (isActive) {
            element.style.display = "inline";
          } else {
            element.style.display = "none";
          }
        });
      });
    });
  </script>